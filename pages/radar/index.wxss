/**index.wxss**/

.body {
  width: 95%;
  height: 92%;
  background: rgb(62, 108, 252);
  display: block;
  margin: 0 auto;
  border-radius: 10px;
  position: relative;
  margin-top: 5%;
}

ec-canvas {
  width: 80%;
  height: 50%;
}

page {
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: rgb(56, 78, 181);
  background-size: cover;
}

.userinfo {
  position: relative;
  width: 750rpx;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo text {
  /* color: #fff; */
  font-size: 14px;
  background-color: #c0c0c0;
  border-radius: 40%;
}

.ltext {
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 15px;
  /* position:inherit   */
}

.mtext {
  color: #fff;
  padding-left: 15px;
  position: relative;
  font-size: 0.8rem;
}

.count {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100px;
  width: 95%;
  /* background: #fff; */
  margin: 15px auto;
}
.col-4{
  border-right:1px solid #eee; 
  width: 25%;
}

.col-4 image{
  width: 34px;
  height: 46px;
}