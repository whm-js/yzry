/* pages/authorize/index.wxss */

.userinfo {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo text {
  /* color: #fff; */
  font-size: 14px;
  background-color: #c0c0c0;
  border-radius: 40%;
}

.ltext {
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 15px;
}
