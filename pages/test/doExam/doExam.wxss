page {
  width: 100%;
  height: 100%;
  text-align: center;
  /* background: url('https://yzryimg.tibosi.com/images/bg_invitation.jpg');
  background-size: cover; */
  background: #394fb4;
}

.user-box {
  margin-top: 50rpx;
  overflow: hidden;
  display: flex;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}

.item1 {
  background: url('https://yzryimg.tibosi.com/images/ui_battle_blue.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: top left;
  text-align: left;
  margin-left: 5px;
  width: 37.5%;
  height: 65px;
}

.user-name {
  color: #fff;
  padding: 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
  width: 55px;
}

.user-score {
  padding: 5px;
  color: #fff;
  font-weight: bold;
  /* height: 40px; */
  height: 30px;
}

.ss {
  width: 80px;
  height: 80px;
  text-align: center;
  background: #fff;
  position: relative;
  margin: 0 auto;
  border-radius: 50%;
}

.item2 {
  width: 25%;
  margin: 0 auto;
  text-align: center;
  height: 80px;
}

.canvas {
  position: absolute;
  border-radius: 50%;
  text-align: center;
  margin-top: 10px;
  padding-top: 70px;
}

.item3 {
  background: url('https://yzryimg.tibosi.com/images/ui_battle_red.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: top right;
  text-align: right;
  margin-right: 5px;
  width: 37.5%;
  height: 65px;
}

.user-img {
  width: 100rpx;
  height: 100rpx;
  padding: 10px 0px 5px 0px;
}

.soft-box {
  clear: both;
  width: 180rpx;
  height: 150rpx;
  background: url('https://yzryimg.tibosi.com/images/ui_arrow.png');
  background-repeat: no-repeat;
  text-align: center;
  background-size: 100% 100%;
  margin: auto;
}

.test-current {
  color: #fff;
  font-size: 24rpx;
  padding-top: 20rpx;
  text-align: center;
}

.soft-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  color: #fff;
  width: 70px;
  margin: auto;
}

.test-time {
  background: #394fb4;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  margin: 0 auto;
  margin-top: -20px;
  line-height: 40px;
  text-align: center;
  position: absolute;
  left: 50%;
  margin-left: -20px;
  top: 50%;
  color: #fff;
}

.test-box {
  padding: 15px;
}

.test-title {
  color: #fff;
  margin-bottom: 30rpx;
}

.defult {
  background: #fff;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20px 0;
  border-radius: 5px;
  padding: 5px;
  text-align: center;
  color: #394fb4;
}

.success {
  background: #41ee93;
